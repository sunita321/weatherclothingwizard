<script>


$(document).ready(function() {

    $("#contact").on("submit", function() {
    return false;
    });

    // Capture Button Click
    $("#addUser").on("click", function() {

        // Capture User Inputs and store into variables
        var name = $('#name').val().trim();
        var zipcode = $('#zipcode').val().trim(); 
        var gender = $('#gender').val(); 
       
        // Valide User Inputs

        // Console log each of the user inputs to confirm you are receiving them
        console.log(name);
        console.log(zipcode);
        console.log(gender);

        // < -----------------------------------------------------------
        if (name != null && name != "" && name != undefined && zipcode != null && zipcode != "" && zipcode != undefined && gender != null && gender != "" && gender != undefined)
            {
        

        // Clear localStorage
        localStorage.clear();

        // Store all content into localStorage
        localStorage.setItem("name", name); 
        localStorage.setItem("zipcode", zipcode);
        localStorage.setItem("gender", gender);
        // < -----------------------------------------------------------
    


     window.location.href = 'Weather_Clothing_Wizard.html'
    }  
    });
    });


</script>




